{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <nav class=" m-2 ">
    <ul class="nav nav-pills nav-fill ">
        <li class="nav-item m-2"><a class="nav-link" href="{{ path('app_quiz_index') }}">Quiz</a></li>
        <li class="nav-item  m-2"><a class="nav-link" href="{{ path('app_question_index') }}">Question</a></li>
        <li class="nav-item  m-2"><a class="nav-link" href="{{ path('app_reponse_index') }}">Réponse</a></li>
        <li class="nav-item  m-2"><a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a></li>
    </ul>
    </nav>
    <div class="m-5">
        <h1 class="align-middle">Question</h1>

        <table class="mt-5 mb-5">
            <tbody>
                {# <tr>
                    <th>Id :</th>
                    <td>{{ question.id }}</td>
                </tr> #}
                <tr>
                    <th>Numéro de quiz :</th>
                    <td>{{ question.quiz }}</td>
                </tr>
                <tr>
                    <th>Numéro de question :</th>
                    <td>Question {{ question.NumeroQuestion }}</td>
                </tr>
                
                <tr>
                    <th>Libellé de la question :</th>
                    <td>{{ question.LibelleQuestion }}</td>
                </tr>
            </tbody>
        </table>
        <a href="{{ path('app_question_edit', {'id': question.id}) }}" class="btn btn-outline-secondary">Editer</a>
        <a href="{{ path('app_question_index') }}" class="btn btn-outline-primary">Retourner à la liste</a>
        
        
        <div>{{ include('question/_delete_form.html.twig') }}</div>
        

    </div>
{% endblock %}
