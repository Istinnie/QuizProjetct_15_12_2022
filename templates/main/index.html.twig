{% extends 'base.html.twig' %}

{% block title %}Faire un quiz{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<nav class=" m-2 ">
    <ul class="nav nav-pills nav-fill ">
        {# <li class="nav-item m-2"><a class="nav-link" href="{{ path('app'),{'id': quiz.id} }}">Faire un quiz</a></li> #}
        <li class="nav-item m-2"><a class="nav-link" href="{{ path('app_quiz_index') }}">Quiz</a></li>
        <li class="nav-item  m-2"><a class="nav-link" href="{{ path('app_question_index') }}">Question</a></li>
        <li class="nav-item  m-2"><a class="nav-link" href="{{ path('app_reponse_index') }}">Réponse</a></li>
        <li class="nav-item  m-2"><a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a></li>
    </ul>
</nav>
<div class="example-wrapper">
    {# ✅  #}
    <div class="border border-dark p-4 shadow-lg p-3 mb-5 bg-body rounded bg-light">
        <h3>{{quiz}} ...</h3>
        
        <div>
            <div class="mt-5 mb-5">
                <div>
                {% for question in quiz.questions %}
                    <div class="mt-4">
                        <h5>{{question.NumeroQuestion}}. {{question.LibelleQuestion}}</h5>
                    </div>
                    <div class="ml-5 mt-4 fs-4">
                        {% for reponse in question.reponses %}
                                {# {{reponse.id}})  #}
                            <div class="form-check-inline mr-2">
                                <div class="mr-2">
                                    <input class="form-check-input" type="radio" name={{question.id}} id="inlineRadio{{reponse.id}}">
                                </div>
                                
                                <label class="form-check-label" for="inlineRadio{{reponse.id}}"> {{reponse.LibelleReponse}}</label>
                                <br>
                            </div>
                        {% endfor %}
                    </div>    
                {% endfor %}
                </div>
            </div>
        </div>
        <div class="mt-5">
            <p>Un questionnaire de {{quiz.pro}} </p>
        </div>
    </div>
</div>
{% endblock %}
